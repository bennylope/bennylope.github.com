@import "reset"

sanserif = Helvetica, Arial, sans-serif
serif = Georgia, serif

border-radius()
  -webkit-border-radius arguments
  -moz-border-radius arguments
  border-radius arguments

html
  font-size: 18px
  font-family: Georgia
  background: white

body
  padding: 30px
  margin-left: auto
  margin-right: auto
  max-width: 1024px

h1
  font-size: 4em
  line-height: 2em

h2
  font-size: 3em
  line-height: 1em
  margin-bottom: 0.5em

h3
  font-family: sanserif
  font-weight: bold
  font-size: 2.0em
  color #666
  margin-top: 1.0em
  margin-bottom: 0.5em

h4
  font-weight: bold
  font-family: sanserif
  font-size: 1.0em
  margin-top: 1.0em
  margin-bottom: 1.0em
  color: #689

html#index h1
  color: black
  font-size: 5em
  margin-bottom: 0.5em

header h1
  font-size: 1em
  line-height: 1em
  margin-bottom: 1.3em
  color: #999

section
  margin-bottom: 50px

blockquote
  margin: 28px 0px 0px 10px
  font-style: italic
  line-height: 24px
  color: #666
  padding: 24px 20px 30px 20px
  border-radius(15px)

article ol, article ul
  margin: 10px 10px 20px 30px

article p
  max-width: 600px

article li
  list-style: disc

article ol, article ol li
  list-style: decimal

p
  font-size: 1.0em
  line-height: 1.8em
  margin-bottom: 1.0em

ul.li-bullets
  list-style: none

ul.li-bullets li
  margin: 5px 5px 15px 5px

section li
  line-height: 1.6em

nav#identities
  display: block
  margin-top: 20px
  font-size: 14px

nav#identities ul
  list-style: none
  display: inline
  margin: 0px

nav#identities ul li
  list-style: none
  display: inline
  border-radius: 5px

nav#identities a, nav#identities a:hover, nav#identities a:visited
  color: red

p.homeLink
  margin-top: 1.5em

a
  text-decoration: none
  padding: 0.2em
  color: #689
  background-color: #eee

a:hover
  text-decoration: none
  background-color: #ddd

header a
  color: #999

p.homeLink a
  color: #999
  font-size: 1em

footer
  display: block
  margin-top: 40px
  margin-right: auto
  margin-left: auto

footer p
  font-size: 14px
  margin-top: 20px
  color: #ccc


