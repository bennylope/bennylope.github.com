@import "reset"

sans-font = Helvetica, Arial, sans-serif
serif-font = Georgia, serif
code-font = Courier

// Sections

body
  max-width: 900px
  margin: 0.5rem
  margin-left: auto
  margin-right: auto

article
  max-width: 900px

// Headers
h1, h2, h3, h4, h5
  font-family: sans-font
  margin: 0.5rem 0 0.8rem 0

h1
  font-size: 3rem
  font-weight: 700

h2
  font-size: 2rem
  font-weight: 600

h3
  font-size: 1.5rem

h4
  font-size: 1.2rem


// Sections of text
p
  margin: 0.2rem 0.2rem 1.0rem 0.2rem
  font-family: serif-font
  font-size: 1.2rem
  line-height: 1.8rem

blockquote
  font-style: italic
  line-height: 1.2rem
  color: #666
  margin: 40px

code
  font-family: code-font
  color: #666
  margin: 1.0rem 0.5rem 1.0rem 0.5rem
  background: #ffc

// Lists
dt
  font-size: 1.4rem
  font-weight: 600
  font-family: sans-font
  margin-bottom: 0.4rem

dd
  margin-bottom: 0.8rem
  font-size: 1.2rem
